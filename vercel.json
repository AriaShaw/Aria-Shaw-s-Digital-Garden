{
  "buildCommand": "bundle exec jekyll build",
  "outputDirectory": "_site",
  "installCommand": "gem install bundler:2.3.26 && bundle install && npm install xml2js",
  "devCommand": "bundle exec jekyll serve --host 0.0.0.0 --port $PORT",
  "cleanUrls": true,
  "trailingSlash": false,

  "github": {
    "silent": false,
    "autoJobCancelation": true
  },

  "build": {
    "env": {
      "JEKYLL_ENV": "production",
      "INDEXNOW_KEY": "537e80460b3a4aa898514c845316796e"
    }
  },

  "env": {
    "SITE_URL": "https://ariashaw.com",
    "INDEXNOW_KEY": "537e80460b3a4aa898514c845316796e"
  },

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ]
}
